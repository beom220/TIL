{
  "compilerOptions": {
    "target": "ESNext", // 최신 ES 문법을 지원
    "module": "commonjs", // Jest는 commonjs 모듈을 사용
    "moduleResolution": "node", // Node 모듈 해석 방식
    "esModuleInterop": true, // ES 모듈과 CommonJS 모듈 간의 호환성
    "skipLibCheck": true, // 라이브러리 파일 검사 건너뛰기
    "resolveJsonModule": true, // JSON 모듈을 import 할 수 있도록 설정
    "strict": true, // 엄격한 타입 검사
  }
}
